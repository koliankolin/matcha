{% extends "layouts/main.twig" %}

{% block title %}
    Register User
{% endblock %}

{% block content %}
    <form action="" method="post">
        <label for="login">Login: <input id="login" name="login" type="text" required></label><br>
        <label for="password">Password: <input id="password" name="password" type="password" required></label><br>
        <label for="email">Email: <input id="email" name="email" type="email" required></label><br>
        <button type="submit">Sign Up</button>
    </form>
{% endblock %}